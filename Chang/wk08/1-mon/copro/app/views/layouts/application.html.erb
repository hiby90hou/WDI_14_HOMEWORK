<!DOCTYPE html>
<html>
  <head>
    <title>Copro</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  	<%= session[:user_id] %>
    <% if session[:user_id] %>
    <a href="/logout">logout</a>
    <% else %>
    <a href="/login">login</a>
    <a href="/users/new">Sign up</a>
    <% end %>
    <a href="/">Home</a>
    <%= yield %>
  </body>
</html>
